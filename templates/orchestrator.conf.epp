{
    "options": {
        "service-url": "https://<%= $pe_server_certname %>:8143",
        "environment": "production",
        <% if $kernel == 'windows' { -%>
        "cacert": "C:\\ProgramData\\PuppetLabs\\puppet\\etc\\ssl\\certs\\ca.pem",
        <% } else { -%>
        "cacert": "/etc/puppetlabs/puppet/ssl/certs/ca.pem",
        <% } -%>
        "token-file": "<%= $access_token_path %>",
        "color": true,
        "noop": false
    }
}
